<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NameStyle">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textAppearance">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="NameStyle2" parent="NameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="layout_padding" parent="NameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>